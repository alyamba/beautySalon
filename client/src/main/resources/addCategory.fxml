                        <Image url="@com/example/client/images/icons8-вверх-налево-48.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
      <Label alignment="CENTER" prefHeight="70.0" prefWidth="884.0" text="Новая категория">
         <styleClass>
            <String fx:value="label-big" />
            <String fx:value="label-page" />
         </styleClass>
         <VBox.margin>
            <Insets left="8.0" right="8.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label prefHeight="26.0" prefWidth="100.0" text="Категория:" />
            <TextField fx:id="categoryName" prefHeight="40.0" prefWidth="300.0" />
         </children>
      </HBox>
      <Button mnemonicParsing="false" onAction="#addCategory" text="Добавить" textFill="WHITE">
         <padding>
            <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
         </padding>
      </Button>
   </children>
